<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
tools:context="com.example.shelterconnect.controller.items.ReadItemActivity">

    <android.support.v7.widget.Toolbar

        android:id="@+id/requestToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ToolBarStyle" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/columnHeaders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c0c0c0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNameLabel"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewAchivedQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Achieved"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewRequiredQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Required"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="In Stock"
            android:textAlignment="center" />


        <Button
            android:id="@+id/Label"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:visibility="invisible" />
        <Button
            android:id="@+id/extra"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:visibility="invisible" />



    </TableRow>

    <ListView
        android:id="@+id/requestList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

</TableLayout>

</LinearLayout>
